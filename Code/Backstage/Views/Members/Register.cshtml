@model Backstage.Models.ViewModels.Members.RegisterVm

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>註冊</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">註冊</h5>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Register", "Members", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label for="Account" class="form-label">帳號 <em>*</em></label>
                                @Html.TextBoxFor(m => m.Account, new { @class = "form-control", @placeholder = "請輸入帳號" })
                                @Html.ValidationMessageFor(m => m.Account, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label for="Password" class="form-label">密碼 <em>*</em></label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "請輸入密碼" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label for="ConfirmPassword" class="form-label">確認密碼 <em>*</em></label>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "請再次輸入密碼" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label for="IdentityCard" class="form-label">身份證字號 <em>*</em></label>
                                @Html.TextBoxFor(m => m.IdentityCard, new { @class = "form-control", @placeholder = "請輸入身份證字號" })
                                @Html.ValidationMessageFor(m => m.IdentityCard, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label for="Name" class="form-label">姓名 <em>*</em></label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "請輸入姓名" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label for="Address" class="form-label">地址 <em>*</em></label>
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "請輸入地址" })
                                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label for="Image" class="form-label">上傳頭像</label>
                                <input type="file" name="Image" id="Image" class="form-control" />
                                @Html.ValidationMessage("Image", "", new { @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn btn-primary">註冊</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-HoA6PI8mDjzWrzF5G2JsEjDsjaGrVv1DFPaXQCIK9KuS/Z86CJRdLOp0wxEqJRwX" crossorigin="anonymous"></script>
</body>
</html>
