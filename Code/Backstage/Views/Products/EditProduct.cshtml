@model Backstage.Models.ViewModels.Products.EditProductVm

@using (Html.BeginForm("EditProduct", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Name">商品名稱</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Price">價格</label>
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Description">商品描述</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="CategoryId">商品分類</label>
        @Html.DropDownListFor(m => m.CategoryId, ViewBag.Categories as SelectList, "請選擇", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Images">商品圖片</label>
        <input type="file" name="Images" id="Images" class="form-control" multiple />
    </div>

    <button type="submit" class="btn btn-primary">提交</button>
}
