@model IEnumerable<Backstage.Models.ViewModels.ShopProductListVm>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>商品列表</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">商品列表</h2>
        <table id="shopping-cart-table" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th nowrap>商品分類</th>
                    <th nowrap>商品預覽圖</th>
                    <th nowrap>商品名稱</th>
                    <th nowrap>商品資訊</th>
                    <th nowrap>商品原價</th>
                    <th nowrap>開團狀況</th>
                    <th nowrap>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Category</td>
                        <td>
                            <img src="@product.ImageUrl" alt="@product.Name" style="max-width: 100px; max-height: 100px;" />
                        </td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.OriginalPrice</td>
                        <td>@(product.IsGroupOpen ? "開團中" : "未開團")</td>
                        <td>
                            @if (!product.IsGroupOpen)
                            {
                                <a href="@Url.Action("EditProduct", "Products", new { id = product.Id })" class="btn btn-primary">修改</a>
                                <a href="@Url.Action("StartGroupBuying", "Products", new { id = product.Id })" class="btn btn-primary">開團</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-HoA6PI8mDjzWrzF5G2JsEjDsjaGrVv1DFPaXQCIK9KuS/Z86CJRdLOp0wxEqJRwX" crossorigin="anonymous"></script>
</body>
</html>
