@model Forestage.Models.ViewModels.LoginVm

<div class="login-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-xs-12">
                <div class="tb-login-form rounded-3 shadow p-4" style="border: 1px solid #ccc; background-color: #f9f9f9;">
                    <h5 class="tb-title text-center mb-4">登入</h5>

                    <form asp-action="Login" method="post" novalidate>
                        <div class="form-group mb-3">
                            <label asp-for="Account" class="form-label l-contact">
                                請輸入帳號 <em class="text-danger">*</em>
                            </label>
                            <input asp-for="Account" class="form-control" />
                            <span asp-validation-for="Account" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label l-contact">
                                請輸入密碼 <em class="text-danger">*</em>
                            </label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="forgot-password1 text-end mb-3">
                            <a asp-action="ForgetPassword" class="forgot-password text-decoration-none">忘記密碼?</a>
                        </div>
                        <div class="login-submit5 text-center">
                            <button type="submit" class="btn btn-primary w-100">登入</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

