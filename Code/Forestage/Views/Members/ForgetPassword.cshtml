@model Forestage.Models.ViewModels.ForgetPasswordVm

<div class="login-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-xs-12">
                <div class="tb-login-form rounded-3 shadow p-4" style="border: 1px solid #ccc; background-color: #f9f9f9;">
                    <h5 class="tb-title text-center mb-4">忘記密碼</h5>

                    <form asp-action="ForgetPassword" method="post" novalidate>
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label l-contact">
                                請輸入 Email <em class="text-danger">*</em>
                            </label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="text-end mb-3">
                            <button type="submit" class="btn btn-primary w-100">寄送驗證信</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
