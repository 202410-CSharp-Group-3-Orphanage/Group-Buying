@model Forestage.Models.ViewModels.RegisterVm

<div class="login-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-xs-12">
                <div class="tb-login-form res rounded-3 shadow p-4" style="border: 1px solid #ccc; background-color: #f9f9f9;">
                    <h5 class="tb-title text-center mb-4">註冊</h5>
                    <form asp-action="Register" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">請輸入姓名 <em class="text-danger">*</em></label>
                            <input asp-for="Name" class="form-control" placeholder="請輸入您的姓名" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Account" class="form-label">請輸入帳號 <em class="text-danger">*</em></label>
                            <input asp-for="Account" class="form-control" placeholder="請輸入您的帳號" />
                            <span asp-validation-for="Account" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">請輸入密碼 <em class="text-danger">*</em></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="請輸入密碼" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">請再次輸入密碼 <em class="text-danger">*</em></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="請再次輸入密碼" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">請輸入Email <em class="text-danger">*</em></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Phone" class="form-label">請輸入手機號碼 <em class="text-danger">*</em></label>
                            <input asp-for="Phone" class="form-control" placeholder="請輸入您的手機號碼" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Birthday" class="form-label">請輸入生日</label>
                            <input asp-for="Birthday" type="date" class="form-control" value="" />
                            <span asp-validation-for="Birthday" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Gender" class="form-label">請勾選性別</label>
                            <div class="form-check">
                                <input asp-for="Gender" class="form-check-input" type="radio" value="" id="genderNone" checked />
                                <label class="form-check-label" for="genderNone">不指定</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Gender" class="form-check-input" type="radio" value="1" id="genderMale" />
                                <label class="form-check-label" for="genderMale">男</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Gender" class="form-check-input" type="radio" value="0" id="genderFemale" />
                                <label class="form-check-label" for="genderFemale">女</label>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary w-100">註冊</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // 移除生日和性別的必填驗證
            $("#Birthday").rules("remove", "required");
            $("input[name='Gender']").rules("remove", "required");
        });
    </script>
}
