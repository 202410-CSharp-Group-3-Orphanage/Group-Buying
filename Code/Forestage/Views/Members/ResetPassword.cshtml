@model Forestage.Models.ViewModels.ResetPasswordVm

<div class="login-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-xs-12">
                <div class="tb-login-form res rounded-3 shadow p-4" style="border: 1px solid #ccc; background-color: #f9f9f9;">
                    <h5 class="tb-title text-center mb-4">重設密碼</h5>
                    <form asp-action="ResetPassword" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">請輸入新密碼 <em class="text-danger">*</em></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="請輸入新密碼" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">請再次確認密碼 <em class="text-danger">*</em></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="請再次輸入新密碼" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary w-100">重設密碼</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
