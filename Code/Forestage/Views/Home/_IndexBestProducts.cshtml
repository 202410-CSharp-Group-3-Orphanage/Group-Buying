@using Forestage.Models.ViewModels.Products;
@model List<Forestage.Models.ViewModels.Products.ProductBlockVm>;

<style>
    .carousel-inner img {
        height: 600px;
        /* 可根據需求調整高度 */
        object-fit: cover;
        /* 確保圖片不失真地填滿框架 */
        width: 100%;
        /* 確保圖片寬度填滿 */
    }
</style>
<div id="app">
    <div id="carouselCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button v-for="(product, index) in products" :key="index" type="button"
                    :data-bs-target="'#carouselCaptions'" :data-bs-slide-to="index"
                    :class="{ active: index === 0 }" :aria-label="'Slide ' + (index + 1)"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item" v-for="(product, index) in products" :key="product.id" :class="{ active: index === 0 }">
                <a :href="'/product/details/' + product.id">
                    <img :src="product.imagePaths[0]" class="d-block w-100" :alt="product.productName">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>{{ product.productName }}</h5>
                        <p>{{ product.info }}</p>
                        <p>
                            金額: {{ product.productPrice }}
                            <span v-if="product.groupBuyingPrice"> (Group Buy: {{ product.groupBuyingPrice }})</span>
                        </p>
                    </div>
                </a>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<script>
    let { createApp, ref } = Vue;

    const products = ref(@Html.Raw(Json.Serialize(@Model))); // 將 C# 資料序列化為 JSON

    const config = {
        setup() {
            return {
                products,
            };
        },
    };

    createApp(config).mount("#app");
</script>
